{
    "extends": "airbnb-base",
    "env": {
        "node": true
    },
    "plugins": [
        "chai-friendly"
    ],
    "parserOptions": {
        "sourceType": "script"
    },
    "rules": {
        "no-unused-expressions": 0,
        "chai-friendly/no-unused-expressions": 2,
        "class-methods-use-this": 0,
        "no-await-in-loop": 0,
        "no-console": 0,
        "no-restricted-syntax": 0,
        "no-underscore-dangle": 0,
        "no-unused-vars": 0
    }    
}